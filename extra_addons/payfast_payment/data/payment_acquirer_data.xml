    <record id="payment_acquirer_payfast" model="payment.acquirer">
        <field name="provider">payfast</field>
        <field name="name">Payfast</field>
        <field name="company_id" ref="base.main_company"/>
        <field name="image_128" type="base64" file="payfast_payment/static/src/img/payfast.png"/>
        <field name="view_template_id" ref="payfast_acquirer_button"/>
        <field name="state">test</field>
        <field name="payfast_key_id">dummy</field>
        <field name="payfast_key_secret">dummy</field>
