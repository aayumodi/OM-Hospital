<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<data noupdate="1">
			<!-- sequence for hospital.patient model -->
		<record id="seq_hospital_patient" model="ir.sequence">
            <field name="name">Patient Sequence</field>
            <field name="code">hospital.patient</field>
            <field name="prefix">HP</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="seq_hospital_appoinment" model="ir.sequence">
            <field name="name">Appoinment Sequence</field>
            <field name="code">hospital.appoinment</field>
            <field name="prefix">OT</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="seq_hospital_doctor" model="ir.sequence">
            <field name="name">Doctor Sequence</field>
            <field name="code">hospital.doctor</field>
            <field name="prefix">DR</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="seq_hospital_pharmacy_order" model="ir.sequence">
            <field name="name">Pharmacy Order</field>
            <field name="code">phramacy.order.lines.wizard</field>
            <field name="prefix">PH</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
	</data>
</odoo>
